  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Stack Calculator",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/calculator",
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb",
      "preLaunchTask": "build",
      "args": [
        "${workspaceFolder}/tests/test_input.txt"
      ],
      "setupCommands": [
        {
            "description": "Enable pretty-printing for lldb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }
      ]
    },
  ]
}
